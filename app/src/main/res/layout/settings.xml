<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/settingsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/settings_help"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />

        <Button
            android:id="@+id/switchServer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/colorGreen2"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/switch_server"
            android:textAllCaps="false"
            android:textColor="@color/colorGreen"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/favTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="@string/favourites"
            android:textColor="@color/colorPrimaryText"
            android:textSize="20sp" />

        <SeekBar
            android:id="@+id/favSlider"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/colorPrimary"
            android:progressTint="@color/colorPrimaryDark"
            android:thumbTint="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/frequencyTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="@string/frequency_of_asking_title"
            android:textColor="@color/colorPrimaryText"
            android:textSize="20sp" />

        <SeekBar
            android:id="@+id/frequencySlider"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/colorPrimary"
            android:progressTint="@color/colorPrimaryDark"
            android:thumbTint="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/backgroundVolumeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="@string/background_music_volume"
            android:textColor="@color/colorPrimaryText"
            android:textSize="20sp" />

        <SeekBar
            android:id="@+id/backgroundVolumeSlider"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/colorPrimary"
            android:progressTint="@color/colorPrimaryDark"
            android:thumbTint="@color/colorPrimaryDark" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/craftingCountsSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:checked="true"
            android:padding="10dp"
            android:text="@string/show_unlock_counter"
            android:textColor="@color/colorPrimaryText"
            android:textSize="20sp"
            android:theme="@style/SwitchColors" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/displayUUIDSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:checked="true"
            android:padding="10dp"
            android:text="@string/show_element_uuids"
            android:textColor="@color/colorPrimaryText"
            android:textSize="20sp"
            android:theme="@style/SwitchColors" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/offlineModeSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:checked="false"
            android:padding="10dp"
            android:text="@string/offline_mode"
            android:textColor="@color/colorPrimaryText"
            android:textSize="20sp"
            android:theme="@style/SwitchColors" />

        <Button
            android:id="@+id/clearRecipeCache"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/clear_recipe_cache"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryText"
            android:textSize="30sp" />

        <Button
            android:id="@+id/saveProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/save_progress"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryText"
            android:textSize="30sp" />

        <Button
            android:id="@+id/loadProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/load_progress"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryText"
            android:textSize="30sp" />

        <Button
            android:id="@+id/resetEverythingButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/reset_everything"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryText"
            android:textSize="30sp" />

        <Button
            android:id="@+id/back2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/colorGreen2"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/back"
            android:textAllCaps="false"
            android:textColor="@color/colorGreen"
            android:textSize="30sp" />

    </LinearLayout>

</ScrollView>
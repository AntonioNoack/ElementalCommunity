<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <me.antonio.noack.elementalcommunity.LoadingBarView
        android:layout_width="match_parent"
        android:layout_height="5dp"></me.antonio.noack.elementalcommunity.LoadingBarView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backArrow2"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:contentDescription="@string/back"
            android:src="@drawable/ic_arrow_back_black_24dp" />

        <Button
            android:id="@+id/back1"
            android:layout_width="0dp"
            android:layout_height="50sp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/back"
            android:textAllCaps="false"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/searchButton2"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:contentDescription="@string/search"
            android:src="@drawable/ic_search_black_24dp" />

        <EditText
            android:id="@+id/search2"
            android:layout_width="0dp"
            android:layout_height="50sp"
            android:layout_weight="3"
            android:maxLines="1"
            android:inputType="text"
            android:hint="@string/what_you_are_searching"
            android:importantForAutofill="no"
            android:visibility="gone" />

        <include layout="@layout/diamond_bar" />

    </LinearLayout>

    <me.antonio.noack.elementalcommunity.Combiner
        android:id="@+id/combiner"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>